extends ../marchsadnesslayout
block content
    script(src="/javascripts/marchSadness/updateTeamScores.js")
    div(class="jumbotron")
        div(class="container")
            div(class="row")
                div(class="col-xs-12")
                    h1.text-center= title
                    p.text-center Welcome to Failure League's March Sadness!
    div.container
        div.row
            div.col-xs-6.text-center
                h3 North
                div.row
                    div.row
                        div.col-xs-1
                            div Seed
                        div.col-xs-2
                            div Team
                        div.col-xs-9
                            div Scores
                            div.row
                                div.col-xs-5
                                div.col-xs-1 1
                                div.col-xs-1 2
                                div.col-xs-1 3
                                div.col-xs-1 4
                                div.col-xs-1 5
                                div.col-xs-1 6
                                div.col-xs-1
                    each val, index in north
                        div.row
                            div.col-xs-1.text-align-right
                                label= index + 1
                            div.col-xs-2
                                div= val.teamName
                                button.UpdateTeam.btn.btn-primary.btn-xs(value='N'+(index+1)) Update
                            div.col-xs-9
                                div.row
                                    div.col-xs-5
                                        div.row Missed 3's
                                        div.row Missed 2's
                                        div.row Missed FT's
                                    each num in [1,2,3,4,5,6]
                                        div.col-xs-1(id='TeamN' + (index + 1) + 'R' + num + 'scores')
                                            div.row(id='TeamN' + (index + 1) + 'R' + num + '-3p')= val.scores['round'+num].missed3
                                            div.row(id='TeamN' + (index + 1) + 'R' + num + '-2p')= val.scores['round'+num].missed2
                                            div.row(id='TeamN' + (index + 1) + 'R' + num + '-ft')= val.scores['round'+num].missedFT
                                    div.col-xs-1
                        br
            div.col-xs-6.text-center
                h3 South
                div.row
                    div.row
                        div.col-xs-1
                            div Seed
                        div.col-xs-2
                            div Team
                        div.col-xs-9
                            div Scores
                            div.row
                                div.col-xs-5
                                div.col-xs-1 1
                                div.col-xs-1 2
                                div.col-xs-1 3
                                div.col-xs-1 4
                                div.col-xs-1 5
                                div.col-xs-1 6
                                div.col-xs-1
                    each val, index in south
                        div.row
                            div.col-xs-1.text-align-right
                                label= index + 1
                            div.col-xs-2
                                div= val.teamName
                            div.col-xs-9
                                div.row
                                    div.col-xs-5
                                        div.row Missed 3's
                                        div.row Missed 2's
                                        div.row Missed FT's
                                    each num in [1,2,3,4,5,6]
                                        div.col-xs-1(id='TeamN' + (index + 1) + 'R' + num + 'scores')
                                            div.row(id='TeamN' + (index + 1) + 'R' + num + '-3p') 0
                                            div.row(id='TeamN' + (index + 1) + 'R' + num + '-2p') 0
                                            div.row(id='TeamN' + (index + 1) + 'R' + num + '-ft') 0
                                    div.col-xs-1
            div.col-xs-6.text-center
                h3 East
                div.row
                    div.row
                        div.col-xs-4
                            div Seed
                        div.col-xs-4
                            div Team Name
                        div.col-xs-4
                    each val, index in east
                        div.row
                            div.col-xs-4.text-align-right
                                label= index + 1
                            div.col-xs-4
                                input(value=val.teamName, id='eastSeed' + (index + 1))
                            div.col-xs-4
            div.col-xs-6.text-center
                h3 West
                div.row
                    div.row
                        div.col-xs-4
                            div Seed
                        div.col-xs-4
                            div Team Name
                        div.col-xs-4
                    each val, index in west
                        div.row
                            div.col-xs-4.text-align-right
                                label= index + 1
                            div.col-xs-4
                                input(value=val.teamName, id='westSeed' + (index + 1))
                            div.col-xs-4
        hr
