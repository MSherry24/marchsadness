script(src="../../javascripts/marchSadness/users/viewMyTeams.js")
div.ms-font-size-30.ms-font-bold BALLOTS
p.ms-font-size-20 You're such a baller! Start a ballot to pick your teams. Don't forget to read the <b><a href="/marchsadness/Rules">rules.</a></b>
br
div.ms-footer-push
    div.table-responsive.ms-font-normal
        table.table
            tbody.ms-grey-line-top
                each ballot, index in ballots
                    tr.ms-grey-line
                        td
                            a(href="/marchsadness/viewSingleTeam/" + ballot._id).ms-font-size-20.ms-font-bold= ballot.name
                            div
                            each league, i in ballot.leagues
                                span
                                    a.ms-text-gray.ms-font-size-14(href="/marchsadness/viewSingleLeague/" + league)= leagueMap[league]
                                    if (i + 1 !== ballot.leagues.length)
                                        span.ms-text-light-gray.ms-font-size-14= ", "
                        td.ms-font-size-20= "Score: " + ballot.totalScore
                        td
                            span
                                a(href="/marchsadness/viewSingleTeam/" + ballot._id)
                                    img#editTeam.teamViewIcon(src="../../images/pencilIcon.png", value= ballot._id)
                            span
                                img.deleteTeam.teamViewIcon(src="../../images/trashIcon.png", value= ballot._id)
    div#startNewBallot
        div.ms-inline-block
            button#showNewBallot.btn.btn-ms-orange.ms-font-size-14(value="Create a Ballot") START A NEW BALLOT
    form#newBallotForm(action="/marchsadness/createnewteam", method="post")
        div.form-group
            div.ms-inline-block
                input.ms-font-size-14.ms-font-normal.ms-create-ballot-width(type="text", class="form-control", name="teamname", value="Name Your Ballot")
            div.ms-inline-block
                button.btn.btn-ms-orange( type="submit", onComplete="window.location.reload(true);") ADD