script(src="../../javascripts/marchSadness/users/viewMyTeams.js")
div.row
    br
    h1
        span.fa.fa-lock.ms-font-title.underline <u>Ballots</u>
div.table-responsive.ms-font-normal
    table.table
        thead
            tr
                th Team
                th Score
        tbody
            each ballot, index in ballots
                tr.h3
                    td
                        a(href="/marchsadness/viewSingleTeam/" + ballot._id)
                            span= ballot.name
                    td= ballot.totalScore
                    td
                        button.deleteTeam.btn.btn-danger.btn-xs(value= ballot._id) Delete
