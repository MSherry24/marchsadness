extends ../layout
block content
    div.container
            div.page-header.text-center
                h1
                    span.fa.fa-anchor Profile Page
                a.btn.btn-default.btn-sm(href="/users/profile/edit") Edit
            div.row
                <!-- LOCAL INFORMATION -->
                div.col-sm-6
                    div.well
                        h2
                            span.fa.fa-user User
                        p
                            span.h4 First Name:
                            span= ' ' + user.firstName
                            br
                            span.h4 Last Name:
                            span= ' ' + user.lastName
                            br
                            span.h4 Email:
                            span= ' ' +user.local.email
                            br
                            span.h4 Ok To Email:
                            span= ' ' + (user.okToEmail ? 'Ok!' : "'Fraid Not")
                            br
