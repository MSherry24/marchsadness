extends ../layout
block content
    script(src="../../../javascripts/users/resetPassword.js")
    div(class="container")
        div.col-sm-6.col-sm-offset-3
            h1
                span.fa.fa-sign-in Reset Password
            <!-- show any messages that come back with authentication -->
            if (message.length > 0)
                div.alert.alert-danger= message
            <!-- Reset Password FORM -->
            form
                p Enter your new password below.
                div.form-group
                    input#newPassword(type="password", class="form-control", name="password")
                button#submitButton( type="submit", class="btn btn-ms-orange btn-lg", value= user._id, verification= verification) Reset Password
                br
                br